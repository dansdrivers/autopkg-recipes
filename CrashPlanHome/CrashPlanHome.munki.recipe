	<key>ParentRecipe</key>
	<string>com.github.dansdrivers.download.CrashPlanHome</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>CrashPlan</string>
		<key>MUNKI_REPO_SUBDIR</key>
		<string>apps</string>
		<key>pkginfo</key>
		<dict>
			<key>catalogs</key>
